[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color]
  ui = true
[color "diff"]
  whitespace = red reverse
[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = vim
	excludesfile = /Users/bjpirt/.gitignore_global
[alias]
  st = status -s
  ci = commit
  br = branch
  co = checkout
  df = diff
  w = whatchanged
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  g = grep
  whatsnew = !sh -c 'git shortlog --format=\"%h %s\" $1..HEAD' -
  wn = !sh -c 'git whatsnew $0'
[user]
        name = Ben Pirt
        email = ben@pirt.co.uk
[push]
        default = tracking
[pack]
        threads = 0
[merge]
        tool = meld
[rerere]
        enabled = 1
[github]
        user = bjpirt
[gist]
        private = yes
